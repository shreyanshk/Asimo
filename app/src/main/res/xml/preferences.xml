<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Profiles">
    <ListPreference
        android:title="Active Profile"
        android:key="active_profile"
        android:entries="@array/crop_profile"
        android:entryValues="@array/crop_profile"
        android:summary="%s"
        android:defaultValue="Wheat">
    </ListPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Details">
        <CheckBoxPreference
            android:title="Check Humidity"
            android:key="humidity_toggle"
            android:defaultValue="True" />
        <EditTextPreference
            android:title="Vehicle Speed"
            android:key="manuverspeed"
            android:defaultValue="10"
            android:inputType="number"/>
        <EditTextPreference
            android:title="Drip Speed"
            android:key="dripspeed"
            android:defaultValue="15"
            android:inputType="numberDecimal"/>
        <CheckBoxPreference
            android:title="Warn on critical battery level"
            android:key="battery_toggle"
            android:defaultValue="True"/>
        <EditTextPreference
            android:title="Critical Battery Level"
            android:key="critical_batt_level"
            android:defaultValue="20"
            android:inputType="number"/>
        <CheckBoxPreference
            android:title="Warn on critical Water level"
            android:key="tank_toggle"
            android:defaultValue="True"/>
        <EditTextPreference
            android:title="Critical Water Level"
            android:key="critical_h20_level"
            android:defaultValue="2"
            android:inputType="number"/>
    </PreferenceCategory>
</PreferenceScreen>